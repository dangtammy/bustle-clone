{{#if modifyForm}}
<form>
  <div class="form-group">
    <label for="">Title</label>
    {{input value=title placeholder=bustle.title}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author placeholder=bustle.author}}
  </div>
  <div class="form-group">
    <label for="caption">Caption</label>
    {{input value=caption placeholder=bustle.caption}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image placeholder=bustle.image}}
  </div>
  <button {{action 'update' bustle}}>Update</button>
</form>
<button {{action 'delete' bustle}}>Delete</button>
{{else}}
  <button {{action 'showModify'}}>Modify</button>
{{/if}}
